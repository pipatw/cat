
@{
    ViewBag.Title = "Import Data";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Home > Import Data</h2>
<script>
    $(function () {

        $(".dropdown-menu li a").click(function () {

            $("#ddl:first-child").text($(this).text());
            $("#ddl:first-child").val($(this).text());

        });

    });
</script>

<div class="panel panel-default">
    <div class="panel-heading"><b>Import Data</b></div>
    <div class="panel-body">
        <div class="row top-buffer">
            <div class="col-lg-4" align="right">บริการที่ต้องการ Upload Data</div>
            <div class="col-lg-4">
                <div class="dropdown">
                    <button id="ddl" class="btn  dropdown-toggle btn-block" type="button" data-toggle="dropdown">
                        เลือกบริการ
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu">
                        <li><a href="#">บริการ CAT hinet</a></li>
                        <li><a href="#">บริการ CAT hotnet</a></li>
                        <li><a href="#">บริการ CAT onnet</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="row top-buffer">
            <div class="col-lg-4" align="right">Select Files...</div>
            <div class="col-lg-4">
                <input type="file" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet">
            </div>
        </div>

        <div class="row top-buffer">
            <div class="col-lg-4"></div>
            <div class="col-lg-1"><button type="button" class="btn btn-primary btn-block">OK</button></div>
            <div class="col-lg-1"><button type="button" class="btn btn-primary btn-block">Cancel</button></div>
        </div>
    </div>
</div>